import "Koala/Koala.ksp"
import 'config.ksp'
import 'model.ksp'
import 'view.ksp'


on init
	activate_logger(get_folder(GET_FOLDER_PATCH_DIR) & "/log.nka")
	Koala.init
	
	config.init('Guitremolo',  421, 'skin')	
	view.init()
	// message('ALL_GROUPS: ' & NUM_GROUPS)

	// tcm.init(35)
end on


{ ******************************************************************** 
* UI CALLBACKS *
**********************************************************************}
{ Tab Control callbacks }

	ui.control_action(btn_main_control, md.tabControlToggle(btn_main_control, btn_secondary_control, mainControls, secondaryControls))
	ui.control_action(btn_secondary_control, md.tabControlToggle(btn_secondary_control, btn_main_control, secondaryControls, mainControls))

{ Main Control callbacks }

	{ Saturation }
	ui.control_action(sli_dist, md.setSaturation(sli_dist, ve_dist, sli_dist))
	ui.control_action(ve_dist, md.setSaturation(ve_dist, sli_dist, sli_dist))
	ui.control_action(swi_dist_bypass, md.toggleBypass(swi_dist_bypass, 0))

	{ Filter Cutoff }
	ui.control_action(sli_cutoff, md.setCutoff(sli_cutoff, ve_cutoff, sli_cutoff))
	ui.control_action(ve_cutoff, md.setCutoff(ve_cutoff, sli_cutoff, sli_cutoff))
	ui.control_action(swi_cutoff_bypass, md.toggleBypass(swi_cutoff_bypass, 1))

	{ Delay }
	ui.control_action(sli_delay_time, md.setDelayTime(sli_delay_time, ve_delay_time, sli_delay_time))
	ui.control_action(ve_delay_time, md.setDelayTime(ve_delay_time, sli_delay_time, sli_delay_time))
	ui.control_action(sli_delay_fb, md.setDelayFB(sli_delay_fb, ve_delay_fb, sli_delay_fb))
	ui.control_action(ve_delay_fb, md.setDelayFB(ve_delay_fb, sli_delay_fb, sli_delay_fb))
	ui.control_action(swi_delay_bypass, md.toggleBypass(swi_delay_bypass, 2))

	{ Reverb }
	ui.control_action(sli_reverb, md.setReverb(sli_reverb, ve_reverb, sli_reverb))
	ui.control_action(swi_reverb_bypass, md.toggleBypass(swi_reverb_bypass, 3))



{ Secondary Control callbacks }

	{ Pitch }
	ui.control_action(sli_pitch, md.changePitch(sli_pitch, ve_pitch, sli_pitch))
	ui.control_action(ve_pitch, md.changePitch(ve_pitch, sli_pitch, sli_pitch))

	{ Time }
	ui.control_action(sli_speed, md.changeSpeed(sli_speed, lbl_speed))

